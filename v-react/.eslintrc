{
  "extends": "standard",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  },
  "globals": {
    "CONFIG": true,
    "$": true,
    "wx": true,
    "Swiper": true,
    "layer": true,
    "CanvasParticle": true
  },
  "env": {
    "browser": true,
    "node": true,
    "worker": true,
    "mocha": true,
    "phantomjs": true,
    "serviceworker": true
  }
}