<!--顶部行情-->
@@include('./topAdSwiper.ejs')
<!--<div class="national-section">
    <div class="national-bg"></div>
    <div class="national-btn"></div>
</div>-->
<div class="hx-main-box clearfix">
    <div class="main-box-left">
        <div class="area-left ">
            <div class="area-carousel">
                <div class="swiper-container primary-carousel">
                    <div class="per-bg">
                        <div class="swiper-button-prev rm-prev"><i class="iconfont iconfont-left"></i></div>
                    </div>
                    <div class="next-bg">
                        <div class="swiper-button-next rm-next"><i class="iconfont iconfont-right"></i></div>
                    </div>
                    <div class="swiper-pagination rm-pag"></div>
                    <div class="swiper-wrapper comment-news-div clearfix">
                        <% data.activityData[1].map((item) => { %>
                        <div class="swiper-slide comment-news">
                            <% if (item.type === 1) { %>
                            <a title="<%= item.title %>" target="_blank" href="<%= domain %>/newsdetail/<%= item.typeLink %>">
                                <% } else if (item.type === 2) { %>
                                <a title="<%= item.title %>" target="_blank"
                                   href="<%= domain %>/news/<%= item.typeLink %>">
                                    <% } else if (item.type === 3) { %>
                                    <a title="<%= item.title %>" target="_blank"
                                       href="<%= domain %>/hot/<%= item.typeLink %>">
                                        <% } else if (item.type === 4) { %>
                                        <a title="<%= item.title %>" target="_blank"
                                           href="<%= domain %>/hot/<%= item.typeLink %>">
                                            <% } else if (item.type === 5) { %>
                                            <a title="<%= item.title %>" target="_blank"
                                               href="<%= domain %>/newsauthor/<%= item.typeLink %>">
                                                <% } else if (item.type === 6 || 7 || 8 || 9 ) { %>
                                                <a title="<%= item.title %>" target="_blank"
                                                   href="<%= item.typeLink %>">
                                                    <% } %>
                                                    <div class="img-div">
                                                        <img alt="<%= item.title %>" class="news-img"
                                                             src="<%= !item.pcImgSrc ? 'http://static.huoxing24.com/images/2018/03/05/1520243882098653.svg' : item.pcImgSrc %>">
                                                    </div>
                                                    <span class="mode"></span>
                                                    <h1 class="title"><%= item.title %></h1>
                                                    <% if (item.type === 6) { %>
                                                    <div class="ad-title"><img src="../../img/indexNew/ad-title.png"
                                                                               alt=""></div>
                                                    <% } %>
                                                </a>
                        </div>
                        <% }) %>
                    </div>
                </div>
                <div class="recommend-cont">
                    <%
                    data.activityData[2].map((item, index) => {
                    if (index <= 1) {
                    %>
                    <% if (item.type === 1) { %>
                    <a class="recommend-list" target="_blank" href="<%= domain %>/newsdetail/<%= item.typeLink %>">
                        <% } else if (item.type === 2) { %>
                        <a class="recommend-list" target="_blank" href="<%= domain %>/news/<%= item.typeLink %>">
                            <% } else if (item.type === 3) { %>
                            <a class="recommend-list" target="_blank" href="<%= domain %>/hot/<%= item.typeLink %>">
                                <% } else if (item.type === 4) { %>
                                <a class="recommend-list" target="_blank"
                                   href="<%= domain %>/hot/<%= item.typeLink %>">
                                    <% } else if (item.type === 5) { %>
                                    <a class="recommend-list" target="_blank"
                                       href="<%= domain %>/newsauthor/<%= item.typeLink %>">
                                        <% } else if (item.type === 6 || 7 || 8 || 9){ %>
                                        <a class="recommend-list" target="_blank" href="<%= item.typeLink %>">
                                            <% } %>
                                            <img src="<%= item.pcImgSrc %>" title="<%=item.title%>" alt="<%=item.title%>">
                                            <% if (item.type === 6) { %>
                                                <% if (item.description !== '') {%>
                                                <p><%= item.description %></p>
                                                <%}%>
                                            <div class="ad-title"><img src="../../img/indexNew/ad-title.png" alt="">
                                            </div>
                                            <% } else { %>
                                            <p><%= item.title %></p>
                                            <% } %>
                                        </a>
                                        <%
                                        }})
                                        %>
                </div>
            </div>
            <div class="hx-shiweng">
                <%
                if (data.adData[1].length > 0) {
                data.adData[1].map((item, index) => {
                if (index === 0) {
                %>
                <div class="news-img clearfix">
                    <a rel="nofollow" title="<%= item.remake %>" href="<%= item.url %>" target="_blank"
                       style="width: 100%; height: 100%;">
                        <img src="<%= item.img_url %>" alt="<%= item.remake %>">
                        <span class="<%= `${item.useType === 1 ? 'active' : ''}` %>"></span>
                    </a>
                </div>
                <% }})
                }
                %>
            </div>
        </div>
        <div class="index-news ">
            <!-- 左边新闻 -->
            @@include('./newsList.ejs')
        </div>
    </div>
    <div class="main-box-right">
        <!--首屏最新快讯-->
        @@include('./newFlash.ejs')
        <!-- 广告 -->
        @@include('./advertising.ejs')
        <!--往期活动-->
        @@include('./indexActivity.ejs')
        <!--我的产品-->
        @@include('./myProducts.ejs')
        <!-- 热门专题 -->
        @@include('./indexCenter.ejs')
        <!--热门视频-->
        @@include('./indexVideo.ejs')
        <!-- 火星专栏 -->
        @@include('./indexRight.ejs')
        <div id="fixedTop">
            <!--涨幅榜-->
            <div class="market-box clearfix">
                <div class="index-market">
                    <div class="market-title clearfix">
                        <h3>涨幅榜</h3>
                        <a href="/markets" target="_blank" class="more"></a>
                    </div>
                    <div class="market-cont"></div>
                </div>
            </div>
            <!--热门标签-->
            @@include('./indexTags.ejs')
        </div>
    </div>
</div>
